<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_secundaria"
    tools:context=".CadastroActivity" >

    <View
        android:id="@+id/view"
        android:layout_width="315dp"
        android:layout_height="600dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/txtcadastro"
        android:textColor="@color/cor_principal"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/edtxtNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtNome"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtNome"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/cor_cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtCPF"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtCPF"
        android:textColorHint="@color/cor_cinza"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtNome"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtNumero"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtNumero"
        android:textColorHint="@color/cor_cinza"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtCPF"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtIdade"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtIdade"
        android:textColorHint="@color/cor_cinza"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtNumero"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtEmail"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtEmail"
        android:textColorHint="@color/cor_cinza"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtIdade"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtSenha"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtSenha"
        android:textColorHint="@color/cor_cinza"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtEmail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtConfSenha"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/edtxtConfSenha"
        android:textColorHint="@color/cor_cinza"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtSenha"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/chkPolitica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/chkPolitica"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtConfSenha"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:onClick="entrar"
        android:text="@string/btnCadastrar"
        android:textColor="@color/white"
        app:backgroundTint="@color/cor_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkPolitica"
        app:rippleColor="@color/cor_principal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtFacaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtFacaLogin"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:onClick="abrirLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastrar"
        app:layout_constraintVertical_bias="0.092"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>