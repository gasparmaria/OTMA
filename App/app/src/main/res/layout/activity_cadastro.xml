<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_secundaria"
    tools:context=".CadastroActivity" >

    <View
        android:id="@+id/view"
        android:layout_width="351dp"
        android:layout_height="643dp"
        android:background="@drawable/rounded_view"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="44dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Cadastro"
        android:textColor="@color/cor_principal"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="65dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome completo"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="116dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints"  />

    <EditText
        android:id="@+id/edtxtCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="178dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="(DDD) + Número"
        android:inputType="phone"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="244dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Idade"
        android:inputType="number"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="310dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="382dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="448dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtxtConfSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="515dp"
        android:background="@drawable/rounded_edittext"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/chkPolitica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Política de privacidade"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="560dp"
        tools:ignore="MissingConstraints"  />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:text="cadastrar"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="606dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtFacaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tem cadastro? Faça login"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="660dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>